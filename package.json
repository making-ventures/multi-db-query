{
  "name": "@mkven/multi-db-monorepo",
  "private": true,
  "author": "Damir Manapov",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc -b",
    "test": "vitest run",
    "test:integration": "pnpm compose:up && pnpm vitest run -c vitest.integration.config.ts; rc=$?; pnpm compose:down; exit $rc",
    "lint": "biome check .",
    "format": "biome format --write .",
    "typecheck": "tsc -b",
    "typecheck:tests": "tsc -p tsconfig.check.json",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "compose:pull": "docker compose -f compose/docker-compose.yml pull",
    "compose:up": "docker compose -f compose/docker-compose.yml up -d --wait",
    "compose:down": "docker compose -f compose/docker-compose.yml down",
    "compose:restart": "docker compose -f compose/docker-compose.yml restart",
    "compose:reset": "docker compose -f compose/docker-compose.yml down -v --remove-orphans",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "bash all-checks.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.29.0",
    "@mkven/multi-db-query": "workspace:*",
    "@mkven/multi-db-validation": "workspace:*",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.8.0",
    "vitest": "^4.0.18"
  }
}
